<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">
    <t t-name="e_website_design.filterSidebar">
        <button class="btn btn-primary filter-toggle-btn" 
                data-bs-toggle="offcanvas" 
                data-bs-target=".filterSidebar">
            FILTER
        </button>

        <div class="offcanvas offcanvas-end filterSidebar"  tabindex="-1">
            <div class="offcanvas-header">
                <h5 class="offcanvas-title">Filter</h5>
                <button t-ref="buttonCloseFilter" type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
            </div>
            <div class="offcanvas-body">
                <div class="mb-3">
                    <label class="form-label">Porduct</label>
                    <SearchComponent 
                        model="'product.template'"
                        fields="['id', 'name']"
                        domain="[['design_ok','=',true]]"
                        onSelect="(record) => this.onSelectProduct(record)"
                        placeholder="'Search Product...'"
                        searchQuery="state.product?state.product.name:''"
                        limit="5"/>
                </div>
                <div class="mb-3">
                    <label class="form-label">Category</label>
                    <SearchComponent 
                        model="'product.design.category'"
                        fields="['id', 'name']"
                        onSelect="(record) => this.onSelectCategory(record)"
                        placeholder="'Search Category...'"
                        searchQuery="state.category?state.category.name:''"
                        limit="5"/>
                </div>
                <div class="row justify-content-center">
                    <button t-on-click="applyFilter" class="col-auto btn btn-primary m-auto">
                        Apply
                    </button>
                </div>
            </div>
        </div>
    </t>
    <t t-name="e_website_design.CatalogDesignsComponent">
        <div>
            <div class="catalog-design-component ">
                <t t-call="e_website_design.filterSidebar"/>
            
                <div class="container mt-4">
                    <div class="row justify-content-end">
                        <div class="col-12 col-sm-6 col-md-4">
                            <SearchComponent 
                                model="'product.design'"
                                fields="['id', 'name']"
                                onSelect="(record) => this.onSelectDesign(record)"
                                placeholder="'Search Design...'"
                                limit="5"/>
                            
                        </div>
                    </div>
                    <div t-if="this.state.category" class="text-muted badge badge-pill badge-primary">
                        Category: <t t-esc="this.state.category.name"/>
                    </div>
                    <div t-if="this.state.product" class="text-muted badge badge-pill badge-secondary">
                        Product: <t t-esc="this.state.product.name"/>
                    </div>
                    <div class="row g-4 public-design-style mt-3">
                        <t t-if="!this.state.loadingData" >
                            <t t-if="this.state.designs">
                                <t t-foreach="this.state.designs" t-as="design" t-key="design.id">
                                    <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12">
                                        <div class="card h-100">
                                            <a style="text-decoration: none;" t-attf-href="/catalog/product/#{this.props.product_id}/design/#{design.id}">

                                                <img t-attf-src="/web/image/product.design/#{design.id}/image"
                                                    class="card-img-top"
                                                    t-att-alt="design.name"/>
                                                <div class="card-body d-flex flex-column">
                                                    <h5 class="card-title fw-bold text-truncate">
                                                        <t t-esc="design.name"/>
                                                    </h5>
                                                    <p t-if="design.default_code" class="card-text flex-grow-1 text-muted">
                                                        [<t t-esc="design.default_code" t-options='{"widget": "text"}'/>]
                                                    </p>
                                                </div>
                                            </a>
                                        </div>
                                    </div>
                                </t>
                            </t>
                            <t t-else="" >
                                <div class="py-3 text-muted">
                                    No Designs to Show
                                </div>
                            </t>
                        </t>
                        <div t-else="" class="position-relative">
                            <div class="row align-items-center loader-component text-center">
                                <div class="col">
                                    <div class="spinner-border text-primary" role="status">
                                        <span class="sr-only"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
    </t>
</templates>