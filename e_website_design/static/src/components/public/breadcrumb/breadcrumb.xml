<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">
    <t t-name="e_website_design.BreadcrumbComponent">
        <div class="d-flex align-items-center mb-4" t-if="this.props">
            <a t-att-href="this.props.back_url" class="me-3">
                <i class="fa fa-arrow-circle-left fa-2x back-arrow"></i>
            </a>
            <nav aria-label="breadcrumb" class="flex-grow-1">
            <ol class="breadcrumb breadcrumb-custom mb-0">
                <t t-foreach="this.props.breadcrumbs" t-as="breadcrumb" t-key="breadcrumb.name">
                    <t t-if="!breadcrumb_first">
                        <span class="mx-2">/</span>
                    </t>
                    <li class="breadcrumb-item" t-att-class="{active:breadcrumb_last}">
                        <a t-if="breadcrumb.href" t-att-href="breadcrumb.href" t-esc="breadcrumb.name"></a>
                        <t t-else="" t-esc="breadcrumb.name"/>
                    </li>
                </t>
            </ol>
            </nav>
        </div>
    </t>
</templates>