<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_pot_translation_dialog" model="ir.actions.client">
        <field name="name">Edit Translations</field>
        <field name="tag">pot_translation_dialog</field>
        <field name="target">new</field>
    </record>
   
    <record id="view_ir_module_e_translate_list" model="ir.ui.view">
        <field name="name">view.ir_module.e_translate.list</field>
        <field name="model">ir.module.e_translate</field>
        <field name="inherit_id" ref="e_module_base.view_ir_module_e_base_list"></field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <list position="inside">
                <field name="module_icon" widget="image_url" options="{'size':[25,25]}"/>
                <field name="state" 
                    widget="badge"
                    decoration-success="state == 'synced'"
                    decoration-warning="state == 'outdated'"
                    decoration-danger="state == 'error'"
                    decoration-muted="state == 'missing'"
                    />
                <field name="po_languages" widget="ejson_tags"/>
            </list>
        </field>
    </record>

    <record id="view_ir_module_e_translate_form" model="ir.ui.view">
        <field name="name">view.ir_module.translate.form</field>
        <field name="model">ir.module.e_translate</field>
        <field name="inherit_id" ref="e_module_base.view_ir_module_e_base_form"></field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_recompute_data']" position="attributes">
                <attribute name="context">{'recompute_state':True}</attribute>
            </xpath>
            <xpath expr="//header" position="inside">
                <field name="id" invisible="1"></field>
                <button name="%(action_pot_translation_dialog)d" 
                        invisible="module_state != 'installed'" 
                        type="action" 
                        string="Edit Translations" 
                        class="btn-primary" 
                        context="{'e_translate_id': id}"/>
            </xpath>
            <xpath expr="//field[@name='module_id']/parent::group" position="inside">
                <field name="po_languages" widget="ejson_tags" invisible="module_state != 'installed'"></field>
            </xpath>
            <xpath expr="//field[@name='state']" position="attributes">
                <attribute name="decoration-success">state == 'synced'</attribute>
                <attribute name="decoration-warning">state == 'outdated'</attribute>
                <attribute name="decoration-muted">state == 'missing'</attribute>
            </xpath>
        </field>
    </record>

    <record id="action_ir_module_e_translate" model="ir.actions.act_window">
        <field name="name">eTranslations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ir.module.e_translate</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Ir_module Translate.
            </p>
        </field>
    </record>

    <record id="action_server_recompute_e_module_translate" model="ir.actions.server">
        <field name="name">Recompute Data</field>
        <field name="model_id" ref="model_ir_module_e_translate"/>
        <field name="binding_model_id" ref="model_ir_module_e_translate"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
            records.action_recompute_data(True,True);
        </field>
    </record>

    <record id="action_server_autotranslate_e_module_translate" model="ir.actions.server">
        <field name="name">AutoTranslate Data</field>
        <field name="model_id" ref="model_ir_module_e_translate"/>
        <field name="binding_model_id" ref="model_ir_module_e_translate"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
            action = records.action_open_autotranslate_wizard();
        </field>
    </record>

</odoo>