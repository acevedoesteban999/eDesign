<?xml version="1.0" encoding="utf-8"?>
  <odoo>
      
    <record id="e_variant_template_product_template_form" model="ir.ui.view">
        <field name="name">e_variant_template.product.template.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="e_variant_template.e_variant_template_product_template_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='variant_group']" position="attributes">
              <attribute name="colspan"></attribute>
            </xpath>
            <xpath expr="//group[@name='variant_group']" position="after">
              <group invisible="not has_variant_template" >
                <field name="auto_create_boms" />
                <field name="extra_products_create_boms" widget="many2many_tags" invisible="not auto_create_boms" />
                <div invisible="not auto_create_boms"  class="oe_grey oe_edit_only"><strong>Important!</strong>. 'Auto create bom' only work for same variant's combination in parent template and self</div>
              </group>
            </xpath>
        </field>
    </record>

  </odoo>