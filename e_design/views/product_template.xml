<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="e_design_inherit_product_template" model="ir.ui.view">
        <field name="name">product.template.view.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//label[@for='sale_ok']" position="after">
                <field name="design_ok"/>
                <label for="design_ok"/>
            </xpath>
            
            <!-- <xpath expr="//page[@name='variants']//field[@name='attribute_line_ids']//field[@name='value_ids']" position="before">
                <field name="design_ok" column_invisible="1"></field>
            </xpath>
            <xpath expr="//page[@name='variants']//field[@name='attribute_line_ids']//field[@name='value_ids']" position="attributes">
                <attribute name="readonly">design_ok</attribute>
            </xpath>
            <xpath expr="//page[@name='variants']//field[@name='attribute_line_ids']//button" position="attributes">
                <attribute name="invisible">design_ok</attribute>
            </xpath> -->
            <xpath expr="//page[@name='variants']" position="after">
                <page name="design" string="Designs" invisible="not design_ok">
                    <field name="design_ids" widget="edesign_product_template"></field>
                </page>
            </xpath>

            
        </field>
    </record>

    <record id="inherit_view_id_inherit_product_template" model="ir.ui.view">
        <field name="name">product.template.view.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_open_documents']" position="before">
                <button type="object"
                    name="action_view_designs"
                    class="oe_stat_button"
                    icon="fa-fw fa-tint"
                    invisible="not design_ok or design_counter == 0">
                    <field name="design_counter" string="Designs" widget="statinfo"/>
                    
                </button>
            </xpath>
        </field>
    </record>

    <record id="e_design_product_template_view_search" model="ir.ui.view">
        <field name="name">product.template.view.search</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"></field>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='filter_to_purchase']" position="after">
                <filter string="Designs" name="filter_to_design" domain="[('design_ok','=',True)]"/>
            </xpath>
        </field>
    </record>

    <record id="e_design_product_template_action" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[]</field>
        <field name="search_view_id" ref="product.product_template_search_view"/>
        <field name="context">{
            'search_default_filter_to_design':1,
            'default_design_ok':True,
        }</field>
        <field name="help" type="html">
            <p></p>
        </field>
    </record>
</odoo>