<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_design_view_form" model="ir.ui.view">
        <field name="name">product.design.view.form</field>
        <field name="model">product.design</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <field
                        name="image"
                        widget="image"
                        class="oe_avatar"
                        options="{'convert_to_webp': True, 'preview_image': 'image'}"
                    />
                    <div class="oe_title">
                        <label for="name" string="Name"/>
                        <h1>
                            <div class="d-flex">
                                <field class="text-break" name="name" options="{'line_breaks': False}" widget="text" placeholder="Design Name..."/>
                            </div>
                        </h1>
                    </div>
                    <group>
                        <field name="product_ids" widget="many2many_tags"></field>
                        <field name="category_id"></field>
                        <field name="default_code"></field>
                        <field name="extra_price"></field>
                    </group>
                    <notebook>
                        <page name="images" string="Images">
                            <field name="attachment_ids" widget="many2many_image"></field>
                        </page>
                        <page name="file" string="File">
                            <field name="file_id" widget="e_binary_field"></field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="product_design_view_list" model="ir.ui.view">
        <field name="name">product.design.view.list</field>
        <field name="model">product.design</field>
        <field name="arch" type="xml">
            <list string="">
                <field name="name"></field>
                <field name="default_code"></field>
                <field name="category_id"></field>
                <field name="products_counter"></field>
            </list>
        </field>
    </record>

    <record id="product_design_view_kanban" model="ir.ui.view">
        <field name="name">product.design.view.kanban</field>
        <field name="model">product.design</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="card">
                        <div class="design-style h-100">
                            <div class="card card-kanban h-100 d-flex flex-column">
                                <field name="image" widget="image" alt="Image" 
                                    options="{'img_class': 'card-img-top'}" 
                                    invisible="not image"/>
                                <div class="card-body mt-auto p-2">
                                    <h5 class="card-title mb-1">
                                        <span t-if="record.default_code.value">
                                            [<field name="default_code"/>]
                                        </span>
                                        <field name="name"/>
                                    </h5>
                                    <small class="text-muted">
                                        Extra Price: <field name="extra_price"/>
                                    </small>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="product_design_action" model="ir.actions.act_window">
        <field name="name">Designs</field>
        <field name="res_model">product.design</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p></p>
        </field>
    </record>
    

</odoo>
