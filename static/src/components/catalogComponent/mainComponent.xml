<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">
    <t t-name="e_sublimation.MainComponent" owl="1">
        
        <div class="category-swiper-main">
            <div class="swiper">
                <div class="swiper-wrapper">
                    <t t-foreach="this.state.categories" t-as="category" t-key="category.id">
                        <div class="swiper-slide">
                            <div class="slide-background"
                                 t-attf-style="background-image: url(/web/image/e_sublimation.category/{{category.id}}/image);">
                            </div>
                            <div class="slide-content">
                                <h2 class="category-title" t-esc="category.name"/>
                                <div class="btn btn-light">Ver Catalogo</div>
                            </div>
                        </div>
                    </t>
                </div>
                
                <div class="swiper-pagination"></div>
                <div class="swiper-button-prev"></div>
                <div class="swiper-button-next"></div>
                <div class="swiper-scrollbar"></div>
            </div>
        </div>
        
        <div class="banner-sublimaciones position-relative overflow-hidden" style="height: 500px;">
    
            <div class="position-absolute top-0 start-0 w-100 h-100" 
                style="background: url('https://via.placeholder.com/1920x600/1a1a2e/16213e?text=Sublimación') center/cover no-repeat;">
            </div>
            
            <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark bg-opacity-50"></div>
            
            <div class="container h-100 position-relative">
                <div class="row h-100 align-items-center justify-content-center text-center text-white">
                    <div class="col-lg-8">
                        
                        <h1 class="display-3 fw-bold mb-4">
                            Sublimaciones personalizadas
                        </h1>
                        
                        <p class="fs-4 mb-5 text-white-50">
                            Diseños únicos, duraderos y de alta calidad para tu marca o evento especial
                        </p>
                        
                        <a href="#" class="btn btn-primary btn-lg px-5 py-3 fw-semibold">
                            <i class="fa fa-palette me-2"></i>Ver todos los diseños
                        </a>
                        
                    </div>
                </div>
            </div>
        </div>

        <div class="swiper swiper-products">
            <div class="swiper-wrapper">
                <t t-foreach="this.state.products" t-as="product" t-key="product.id">
                    <div class="swiper-slide h-100 d-flex flex-column">
                        
                        <div class="row flex-grow-1 g-0" style="min-height: 0;">
                            
                            <div class="col-12 col-md-6 h-100 position-relative">
                                <div class="slide-background h-100 w-100" 
                                    t-attf-style="background-image: url(/web/image/product.template/{{product.id}}/image_1920);">
                                </div>
                            </div>
                            
                            <t t-set="subproducts" t-value="getRandomChildren(product.product_childs_sublimation_ids, 5)"/>
                            <div class="col-12 col-md-6 h-100 d-flex flex-column g-0" style="min-height: 0;">
                                
                                <div class="row flex-grow-1 g-0 border-bottom border-2 border-white" style="min-height: 0;">
                                    <div class="col-4 h-100 position-relative border-end border-2 border-white">
                                        <div t-if="subproducts[0]" class="slide-background h-100 w-100"
                                            t-attf-style="background-image: url(/web/image/product.template/{{subproducts[0]}}/image_1920);">
                                        </div>
                                        <div t-else="" class="h-100 w-100 bg-secondary bg-opacity-25 d-flex align-items-center justify-content-center">
                                            <i class="fa fa-image text-muted fa-lg"/>
                                        </div>
                                    </div>
                                        <div class="col-4 h-100 position-relative border-end border-2 border-white">
                                        <div t-if="subproducts[1]" class="slide-background h-100 w-100"
                                            t-attf-style="background-image: url(/web/image/product.template/{{subproducts[1]}}/image_1920);">
                                        </div>
                                        <div t-else="" class="h-100 w-100 bg-secondary bg-opacity-25 d-flex align-items-center justify-content-center">
                                            <i class="fa fa-image text-muted fa-lg"/>
                                        </div>
                                    </div>    <div class="col-4 h-100 position-relative border-end border-2 border-white">
                                        <div t-if="subproducts[2]" class="slide-background h-100 w-100"
                                            t-attf-style="background-image: url(/web/image/product.template/{{subproducts[2]}}/image_1920);">
                                        </div>
                                        <div t-else="" class="h-100 w-100 bg-secondary bg-opacity-25 d-flex align-items-center justify-content-center">
                                            <i class="fa fa-image text-muted fa-lg"/>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="row flex-grow-1 g-0" style="min-height: 0;">
                                    <div class="col-6 h-100 position-relative border-end border-2 border-white">
                                        <div t-if="subproducts[3]" class="slide-background h-100 w-100"
                                            t-attf-style="background-image: url(/web/image/product.template/{{subproducts[3]}}/image_1920);">
                                        </div>
                                        <div t-else="" class="h-100 w-100 bg-secondary bg-opacity-25 d-flex align-items-center justify-content-center">
                                            <i class="fa fa-image text-muted fa-lg"/>
                                        </div>
                                    </div>
                                    
                                    <div class="col-6 h-100 position-relative">
                                        <div t-if="subproducts[4]" class="slide-background h-100 w-100"
                                            t-attf-style="background-image: url(/web/image/product.template/{{subproducts[4]}}/image_1920);">
                                        </div>
                                        <div t-else="" class="h-100 w-100 bg-secondary bg-opacity-25 d-flex align-items-center justify-content-center">
                                            <button class="btn btn-sm btn-outline-primary">Ver Más</button>
                                        </div>
                                    </div>
                                </div>
                                
                            </div>
                        </div>
                        
                        <h5 t-esc="product.name" class="text-white text-center p-3 m-0 bg-dark w-100 flex-shrink-0"/>
                        
                    </div>
                </t>
            </div>
            
            <div class="swiper-pagination-products"></div>
            <div class="swiper-button-prev-products"></div>
            <div class="swiper-button-next-products"></div>
        </div>
    </t>
</templates>