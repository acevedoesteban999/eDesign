<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
        <record id="e_pos_out_stock_product_template_form" model="ir.ui.view">
            <field name="name">view.product.template.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="point_of_sale.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='to_weight']" position="after">
                    <field name="show_pos_outstock"/>
                </xpath>
            </field>
        </record>

</odoo>