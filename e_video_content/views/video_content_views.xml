<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_video_content_list" model="ir.ui.view">
        <field name="name">video.content.list</field>
        <field name="model">video.content</field>
        <field name="arch" type="xml">
            <list>
                <field name="filename"/>
                <field name="file_size"/>
            </list>
        </field>
    </record>

    <record id="view_video_content_form" model="ir.ui.view">
        <field name="name">video.content.form</field>
        <field name="model">video.content</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="filename" readonly="1"/>
                        <field name="file_size" readonly="1"/>
                        <field name="video_data" 
                            widget="video_content" 
                            filename="filename"
                            force_save="1"
                            options="{'accepted_file_extensions': 'video/*'}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_video_content" model="ir.actions.act_window">
        <field name="name">Videos</field>
        <field name="res_model">video.content</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>