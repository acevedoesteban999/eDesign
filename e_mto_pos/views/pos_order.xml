<?xml version="1.0"?>
<odoo>
    <data>
        <record id="pos_order_form_inherit_pos_order_form" model="ir.ui.view">
            <field name="name">pos.order.form.pos.sale</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_view_mrp_production" groups="mrp.group_mrp_user" type="object" class="oe_stat_button" icon="fa-fw fa-wrench" invisible="mrp_production_count == 0">
                        <field name="mrp_production_count" widget="statinfo" string="Manufacturing"/>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
