<?xml version="1.0" encoding="utf-8"?>
  <odoo>
      
    <record id="e_pos_mrp_sublimation_form_inherit" model="ir.ui.view">
        <field name="name">view.mrp.production.form</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_description_variants']" position="before" >
              <field  name="design_id" 
                      invisible="not design_id"
                      context="{
                        'action_target':'new',
                        'view_form':'e_pos_mrp_sublimation.product_design_view_form_no_edit'}"
                      >
              </field>
            </xpath>
        </field>
    </record>

  </odoo>