<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_neutralize_pos_ribbon" model="ir.ui.view">
        <field name="name">POS Neutralize Ribbon</field>
        <field name="inherit_id" ref="point_of_sale.index"/>
        <field name="arch" type="xml">
            <xpath expr="//body" position="inside">
                <div t-if="request.env['ir.config_parameter'].sudo().get_param('database.is_neutralized') == 'true'">
                    <span id="oe_neutralize_ribbon" t-attf-style="
                            width: 400px;
                            top: 55px;
                            right: -100px;
                            font-size: 32px;
                            text-align: center;
                            padding: 10px;
                            line-height: 30px;
                            color: #F0F0F0;
                            transform: rotate(45deg);
                            position: fixed;
                            box-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
                            background: #D0442C;
                            opacity: 0.6;
                            pointer-events: none;
                            text-transform: uppercase;
                            z-index: 9999;
                            {{ neutralize_ribbon_style or ''}}">
                        <t t-out="neutralize_ribbon_text">Neutralized</t>
                    </span>
                </div>
            </xpath>
        </field>
    </record>
</odoo>