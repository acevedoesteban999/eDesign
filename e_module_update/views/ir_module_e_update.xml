<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_ir_module_e_update_list" model="ir.ui.view">
        <field name="name">ir.module.e_update.list</field>
        <field name="model">ir.module.e_update</field>
        <field name="arch" type="xml">
            <list>
                <field name="module_name"/>
            </list>
        </field>
    </record>

    <record id="view_ir_module_e_update_form" model="ir.ui.view">
        <field name="name">ir.module.e_update.form</field>
        <field name="model">ir.module.e_update</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_check_version" type="object" string="Check Version" class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="module_name" placeholder="ej: module"/>
                        </group>
                        <group>
                            <field name="installed_version" readonly="1"/>
                            <field name="local_version" readonly="1"/>
                            <button string="Update Local Module" name="action_update_module" type="object" class="oe_highlight" invisible="installed_version == local_version"/>
                            <field name="update_state" widget="badge" readonly="1"
                                decoration-success="update_state == 'uptodate'"
                                decoration-info="update_state  == 'to_update'"
                                decoration-danger="update_state == 'error'"
                                invisible="not update_state"
                                />
                            <field name="error_msg" readonly="1" invisible="not update_state or update_state != 'error'" decoration-danger="True"></field>
                            <field name="last_check" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
