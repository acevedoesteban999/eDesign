<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_ir_module_e_update_list" model="ir.ui.view">
        <field name="name">ir.module.e_update.list</field>
        <field name="model">ir.module.e_update</field>
        <field name="arch" type="xml">
            <list>
                <field name="module_name"/>
                <field name="installed_version"></field>
                <field name="local_version"></field>
            </list>
        </field>
    </record>

    <record id="view_ir_module_e_update_form" model="ir.ui.view">
        <field name="name">ir.module.e_update.form</field>
        <field name="model">ir.module.e_update</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_check_version" type="object" string="Check Version"/>
                                        
                    <button name="action_restart_server" type="object" string="Restart Server" class="oe_highlight"
                            invisible="not restart_local" />
                            
                    <button name="action_install_local_version" string="Update Module"  type="object" class="oe_highlight" 
                            invisible="not update_local" confirm="This will update this module in the server. Continue?"/>
                    
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="module_name" placeholder="ex: e_module"/>
                        </group>
                        <group>
                            <field name="module_icon" widget="image_url"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="info" string="Information">
                            <group>
                                <group name="versions">
                                    <field name="installed_version" readonly="1"/>
                                    <field name="local_version" readonly="1"/>
                                    <field name="repository_version" readonly="1"></field>
                                </group>
                                <group name="state" invisible="not update_state">
                                    <field name="update_state" widget="badge" readonly="1"
                                        decoration-success="update_state == 'uptodate'"
                                        decoration-info="update_state  == 'to_update'"
                                        decoration-danger="update_state == 'error'"
                                        />
                                    <field name="error_msg" readonly="1" invisible="update_state != 'error'" decoration-danger="True"></field>
                                    <field name="last_check" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        <page name="backups" string="Backups">
                            <field name="backup_ids">
                                <list>
                                    <field name="name"></field>
                                    <field name="version"></field>
                                    <field name="size"></field>                                   
                                    <button string="Restore" confirm="This will REPLACE all local files. Continue?" name="action_restore_backup" type="object" class="oe_highlight"/>
                                    <button string="Delete" confirm="This will DELETE the backup. Continue?" name="action_delete_backup" type="object" />
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
