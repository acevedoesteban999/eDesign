<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_ir_module_e_update_manual_list" model="ir.ui.view">
        <field name="name">ir.module.e_update.manual.list</field>
        <field name="model">ir.module.e_update.manual</field>
        <field name="inherit_id" ref="e_module_update.view_ir_module_e_update_list"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <list position="inside">
                <field name="zip_version"></field>
            </list>
        </field>
    </record>
    
    <record id="view_ir_module_e_update_manual_form" model="ir.ui.view">
        <field name="name">ir.module.e_update.manual.form</field>
        <field name="model">ir.module.e_update.manual</field>
        <field name="inherit_id" ref="e_module_update.view_ir_module_e_update_form"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">

                <xpath expr="//button[@name='action_restart_server']" position="before">
                    <button name="action_store_version" string="Store Up Version" type="object" class="oe_highlight"
                            invisible="not store_local or state != 'to_update'" confirm="This will REPLACE all local files. Continue?"/>
                    <button name="action_store_version" string="Store Downgrade Version" type="object" class="oe_highlight"
                            invisible="not store_local or state != 'to_downgrade'" confirm="This will REPLACE all local files and store downgrade version. Continue?"/>
                </xpath>
                <xpath expr="//field[@name='module_state']" position="after">
                    <field name="file_zip" 
                        force_save="1"  
                        widget="binary" 
                        invisible="module_state != 'installed'"
                    />
                </xpath>
                <xpath expr="//group[@name='versions']" position="inside">
                    <field name="zip_version"></field>
                </xpath>
        </field>
    </record>

    <record id="action_ir_module_e_update_manual" model="ir.actions.act_window">
        <field name="name">Manual Update</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ir.module.e_update.manual</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new E_git_update Module.
            </p>
        </field>
    </record>

    <record id="action_e_update_manual_create_backups" model="ir.actions.server">
        <field name="name">Create Repository Version Backup</field>
        <field name="model_id" ref="model_ir_module_e_update_manual"/>
        <field name="binding_model_id" ref="model_ir_module_e_update_manual"></field>
        <field name="binding_type">action</field>
        <field name="binding_view_types">form</field>
        <field name="state">code</field>
        <field name="code">
            action = records.action_create_backup()
        </field>
    </record>
    
</odoo>
