        <field name="model">product.design.category</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record> -->

    <record id="action_product_design_category" model="ir.actions.act_window">
        <field name="name">Product Design Category</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.design.category</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Product Design Category.
            </p>
        </field>
    </record>

</odoo>
