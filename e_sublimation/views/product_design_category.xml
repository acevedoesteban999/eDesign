<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_product_design_category_list" model="ir.ui.view">
        <field name="name">view.product.design.category.list</field>
        <field name="model">product.design.category</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="view_product_design_category_form" model="ir.ui.view">
        <field name="name">view.product.design.category.form</field>
        <field name="model">product.design.category</field>
        <field name="arch" type="xml">
            <form string="Product Design Category">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- <record id="view_product_design_category_search" model="ir.ui.view">
