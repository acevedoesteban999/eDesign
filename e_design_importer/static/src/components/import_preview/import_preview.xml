<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="e_design_import.ImportPreview">
        <div class="import-preview-container container-fluid p-4">
            <div class="stats-row mb-4">
                <div class="row g-4">
                    <div class="col-md-3">
                        <div class="card stat-card h-100">
                            <div class="card-body text-center">
                                <div class="d-flex align-items-center justify-content-center mb-2">
                                    <i class="bi bi-folder-fill text-primary fs-1"></i>
                                </div>
                                <h2 class="text-primary mb-1" t-esc="stats.categories"/>
                                <small class="text-muted text-uppercase fw-semibold letter-spacing-1">Categories</small>
                                <div class="mt-3" t-if="stats.newCategories > 0">
                                    <span class="badge bg-success rounded-pill px-3 py-2">
                                        <i class="bi bi-plus-circle me-1"></i>
                                        <t t-esc="stats.newCategories"/> New
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card stat-card h-100">
                            <div class="card-body text-center">
                                <div class="d-flex align-items-center justify-content-center mb-2">
                                    <i class="bi bi-folder-symlink-fill text-info fs-1"></i>
                                </div>
                                <h2 class="text-info mb-1" t-esc="stats.subcategories"/>
                                <small class="text-muted text-uppercase fw-semibold letter-spacing-1">Sub-Categories</small>
                                <div class="mt-3" t-if="stats.newSubcategories > 0">
                                    <span class="badge bg-info text-dark rounded-pill px-3 py-2">
                                        <i class="bi bi-plus-circle me-1"></i>
                                        <t t-esc="stats.newSubcategories"/> New
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card stat-card h-100">
                            <div class="card-body text-center">
                                <div class="d-flex align-items-center justify-content-center mb-2">
                                    <i class="bi bi-palette-fill text-success fs-1"></i>
                                </div>
                                <h2 class="text-success mb-1" t-esc="stats.designs"/>
                                <small class="text-muted text-uppercase fw-semibold letter-spacing-1">Designs</small>
                                <div class="mt-3" t-if="stats.newDesigns > 0">
                                    <span class="badge bg-success rounded-pill px-3 py-2">
                                        <i class="bi bi-plus-circle me-1"></i>
                                        <t t-esc="stats.newDesigns"/> New
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card stat-card h-100">
                            <div class="card-body text-center">
                                <div class="d-flex align-items-center justify-content-center mb-2">
                                    <i class="bi bi-box-seam-fill text-warning fs-1"></i>
                                </div>
                                <h2 class="text-warning mb-1" t-esc="stats.products"/>
                                <small class="text-muted text-uppercase fw-semibold letter-spacing-1">Products</small>
                                <div class="mt-3" t-if="stats.newProducts > 0">
                                    <span class="badge bg-success rounded-pill px-3 py-2">
                                        <i class="bi bi-plus-circle me-1"></i>
                                        <t t-esc="stats.newProducts"/> New
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="tree-container card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <span class="fw-bold text-secondary">
                        <i class="bi bi-diagram-3-fill me-2"></i>
                        Structure Preview
                    </span>
                    <div class="btn-group btn-group-sm">
                        <button class="btn btn-outline-secondary" t-on-click="expandAll">
                            <i class="bi bi-arrows-expand me-1"></i> Expand All
                        </button>
                        <button class="btn btn-outline-secondary" t-on-click="collapseAll">
                            <i class="bi bi-arrows-collapse me-1"></i> Collapse All
                        </button>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="category-list">
                        <t t-foreach="categories" t-as="category" t-key="category.code">
                            <div class="category-item">
                                <div class="item-header d-flex align-items-center p-3 mb-2 shadow-sm"
                                     t-att-class="category.isNew ? 'bg-success-subtle border-success' : 'bg-light border-secondary'"
                                     t-on-click="() => this.toggleExpand(category.code)">
                                    <button class="btn btn-sm btn-link text-decoration-none me-2 p-1">
                                        <i t-att-class="isExpanded(category.code) ? 'bi bi-chevron-down fs-5' : 'bi bi-chevron-right fs-5'"/>
                                    </button>
                                    <i t-att-class="category.isNew ? 'bi bi-folder-fill text-success fs-5 me-3' : 'bi bi-folder text-secondary fs-5 me-3'"/>
                                    <div class="flex-grow-1">
                                        <span class="fw-bold fs-6" t-esc="category.name"/>
                                        <span class="badge bg-secondary ms-2" t-esc="category.code"/>
                                    </div>
                                    <span t-if="category.isNew" class="badge bg-success rounded-pill me-2">
                                        <i class="bi bi-star-fill me-1"></i>New
                                    </span>
                                    <span class="badge bg-light text-dark border rounded-pill">
                                        <t t-esc="(category.subcategories?.length || 0) + (category.designs?.length || 0)"/> items
                                    </span>
                                </div>
                                
                                <div t-if="isExpanded(category.code)" class="ms-4 ps-2 border-start border-2 border-light">
                           
                                    <t t-foreach="category.subcategories" t-as="sub" t-key="sub.code">
                                        <div class="subcategory-item mb-2">
                                            <div class="item-header d-flex align-items-center p-2 mb-2 shadow-sm"
                                                 t-att-class="sub.isNew ? 'bg-info-subtle border-info' : 'bg-white border-secondary'"
                                                 t-on-click.stop="() => this.toggleExpand(sub.code)">
                                                <button class="btn btn-sm btn-link text-decoration-none me-2 p-1">
                                                    <i t-att-class="isExpanded(sub.code) ? 'bi bi-chevron-down' : 'bi bi-chevron-right'"/>
                                                </button>
                                                <i t-att-class="sub.isNew ? 'bi bi-folder-fill text-info fs-5 me-2' : 'bi bi-folder text-secondary fs-5 me-2'"/>
                                                <div class="flex-grow-1">
                                                    <span class="fw-semibold" t-esc="sub.name"/>
                                                    <span class="badge bg-secondary ms-2" t-esc="sub.code"/>
                                                </div>
                                                <span t-if="sub.isNew" class="badge bg-info text-dark rounded-pill me-2">New</span>
                                                <span class="badge bg-light text-dark border rounded-pill">
                                                    <t t-esc="(sub.designs?.length || 0)"/> designs
                                                </span>
                                            </div>
                                            
                                            <div t-if="isExpanded(sub.code)" class="ms-4 mt-2">
                                                <t t-foreach="sub.designs" t-as="design" t-key="design.code">
                                                    <div class="design-item d-flex align-items-center p-2 mb-2 shadow-sm"
                                                         t-att-class="design.isNew ? 'bg-primary-subtle border-primary' : 'bg-light border-secondary'">
                                                        <i class="bi bi-palette-fill fs-5 me-3 ms-2"
                                                           t-att-class="design.isNew ? 'text-primary' : 'text-secondary'"/>
                                                        <div class="flex-grow-1">
                                                            <span class="fw-medium" t-esc="design.name"/>
                                                            <span class="badge bg-secondary ms-2" t-esc="design.code"/>
                                                        </div>
                                                        <span t-if="design.isNew" class="badge bg-primary rounded-pill">
                                                            <i class="bi bi-plus-circle me-1"></i>New
                                                        </span>
                                                    </div>
                                                </t>
                                                <div t-if="!(sub.designs?.length)" class="alert alert-light border-0 text-muted small fst-italic py-2">
                                                    <i class="bi bi-inbox me-2"></i>No designs in this subcategory
                                                </div>
                                            </div>
                                        </div>
                                    </t>
                                    
                                    <div class="direct-designs mt-3" t-if="category.designs?.length">
                                        <h6 class="text-muted small text-uppercase fw-bold mb-2 ms-2">
                                            <i class="bi bi-palette me-1"></i>Direct Designs
                                        </h6>
                                        <t t-foreach="category.designs" t-as="design" t-key="design.code">
                                            <div class="design-item d-flex align-items-center p-2 mb-2 ms-2 shadow-sm"
                                                 t-att-class="design.isNew ? 'bg-primary-subtle border-primary' : 'bg-light border-secondary'">
                                                <i class="bi bi-palette-fill fs-5 me-3 ms-2"
                                                   t-att-class="design.isNew ? 'text-primary' : 'text-secondary'"/>
                                                <div class="flex-grow-1">
                                                    <span class="fw-medium" t-esc="design.name"/>
                                                    <span class="badge bg-secondary ms-2" t-esc="design.code"/>
                                                </div>
                                                <span t-if="design.isNew" class="badge bg-primary rounded-pill">
                                                    <i class="bi bi-plus-circle me-1"></i>New
                                                </span>
                                            </div>
                                        </t>
                                    </div>
                                    
                                    <div t-if="!(category.subcategories?.length) and !(category.designs?.length)" 
                                         class="alert alert-light text-center text-muted py-3">
                                        <i class="bi bi-folder-x fs-4 d-block mb-2"></i>
                                        <small>Empty category</small>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>