<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="e_pos_mrp.PickingScreen">
        <div class="picking-screen screen h-100 bg-100">
            <div class="screen-full-width d-flex w-100 h-100">
                <div t-if="!ui.isSmall || pos.ticket_screen_mobile_pane === 'left'" class="rightpane pane-border d-flex flex-column flex-grow-1 w-100 h-100 h-lg-100 bg-200 overflow-y-auto">
                    <div class="controls d-grid d-sm-flex align-items-center justify-content-between gap-2 gap-sm-3 p-2 bg-300">
                        <div class="buttons d-flex gap-2">
                            <button class="discard btn btn-lg btn-light text-nowrap" t-on-click="() => this.closePickingScreen()">
                                <i class="oi oi-chevron-left"/>
                                <span t-if="!ui.isSmall" class="ms-2">Back</span>
                            </button>
                        </div>
                        <SearchBar
                            config="getSearchBarConfig()"
                            placeholder.translate="Search Pikings..."
                            onSearch.bind="onSearch"
                            onFilterSelected.bind="onFilterSelected" />
                        <div class="item d-flex align-items-center justify-content-end">
                            <span class="page me-2"><t t-esc="getPageNumber()" /></span>
                            <div class="page-controls d-flex align-items-center gap-1">
                                <button class="previous btn btn-light btn-lg" t-on-click="() => this.onPrevPage()">
                                    <i class="fa fa-fw fa-caret-left" role="img" aria-label="Previous Picking List" title="Previous Picking List"></i>
                                </button>
                                <button class="next btn btn-light btn-lg" t-on-click="() => this.onNextPage()">
                                    <i class="fa fa-fw fa-caret-right" role="img" aria-label="Next Picking List" title="Next Picking List"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="orders overflow-y-auto flex-grow-1">
                        <t t-if="this.state.filteredPickingList.length !== 0">
                            <div class="header-row d-flex text-bg-700 fw-bolder" t-att-class="{ 'd-none': ui.isSmall }">
                                <div class="col p-2">Pos Order</div>
                                <div class="col p-2">Picking Name</div>
                                <div class="col p-2">Partner</div>
                                <div class="col p-2">Create Date</div>
                                <div class="col p-2">Scheduled Date</div>
                                <div class="col end p-2">State</div>
                            </div>
                            <t t-if="!ui.isSmall" t-foreach="this.state.filteredPickingList" t-as="picking" t-key="picking.id">
                                <div class="order-row" t-att-class="{ 'highlight bg-primary text-white': isHighlighted(picking) }"
                                    t-on-click="() => this.onClickpicking(picking)" >
                                    <div class="col p-2 ">
                                        <div><t t-if="picking.pos_order_id" t-esc="picking.pos_order_id[1]"></t></div>
                                    </div>
                                    <div class="col p-2 ">
                                        <div><t t-esc="picking.name"></t></div>
                                    </div>
                                    <div class="col p-2 ">
                                        <div><t t-if="picking.partner_id" t-esc="picking.partner_id[1]"></t></div>
                                    </div>
                                    <div class="col p-2">
                                        <div><t t-esc="GetDate(picking.create_date)"></t></div>
                                    </div>
                                    <div class="col p-2">
                                        <div><t t-esc="GetDate(picking.scheduled_date)"></t></div>
                                    </div>
                                    <div class="col end p-2">
                                        <div class="ebadge badge-pill" t-att-class="{
                                            'badge-secondary': picking.state == 'done',
                                            'badge-warning': picking.state == 'waiting',
                                            'badge-success':picking.state == 'assigned'}">
                                            <t t-esc="picking.state"/>
                                        </div>
                                    </div>
                                </div>
                            </t>
                            <t t-if="ui.isSmall" t-foreach="this.state.filteredPickingList" t-as="picking" t-key="picking.id">
                                <div class="mobileOrderList order-row rounded-3" t-att-class="{ 'highlight bg-primary text-white': isHighlighted(picking) }"
                                    t-on-click="() => this.onClickpicking(picking)" >
                                    <div class="col p-2 d-flex justify-content-between align-items-center">
                                        <div><t t-esc="picking.name"></t></div>
                                        <div><t t-esc="GetDate(picking.create_date)"></t></div>
                                    </div>
                                    <div class="col p-2 d-flex justify-content-between align-items-center">
                                        <div><t t-esc="GetDate(picking.scheduled_date)"></t></div>
                                        <div class="ebadge badge-pill" t-att-class="{
                                            'badge-secondary': picking.state == 'done',
                                            'badge-warning': picking.state == 'waiting',
                                            'badge-success':picking.state == 'assigned'}">
                                            <t t-esc="GetState(picking.state)"/>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </t>
                        <CenteredIcon
                            t-else=""
                            icon="this.pos.data.network.loading ? 'fa-spinner fa-spin' : 'fa-shopping-cart fa-4x'"
                            text="this.pos.data.network.loading ? 'Loading...' : 'No picking found'"
                            class="'h-100'"/>
                    </div>
                    <div class="switchpane d-flex w-100 gap-2 p-2 mt-2" t-if="ui.isSmall">
                        <button class="btn-switchpane btn btn-lg lh-lg w-50 py-3 secondary review-button" t-att-class="{'btn-primary': isOrderSynced, 'btn-light': !isOrderSynced}" t-on-click="switchPane">
                            <span class="d-block">Review</span>
                        </button>
                    </div>
                </div>
