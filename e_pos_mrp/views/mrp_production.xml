<?xml version="1.0"?>
<odoo>
    <data>
        <record id="pos_order_form_inherit_mrp_production_form" model="ir.ui.view">
            <field name="name">mrp.production.form.pos.sale</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button type="object" name="action_view_pos_order" class="oe_stat_button" icon="fa-fw fa-credit-card " invisible="not pos_order_id">
                        <div class="o_stat_info">
                            <span class="o_stat_text">POS Order</span>
                        </div>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
