<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="e_design_pos.Orderline" t-inherit="point_of_sale.Orderline" t-inherit-mode="extension">
       <xpath expr="//div[hasclass('product-name')]" position="inside">
            <small t-if="this.props.line.design_id?.default_code" class="text-muted fst-italic">
                [<t t-esc="this.props.line.design_id.default_code"/>]
            </small>
       </xpath>

       <xpath expr="//div[hasclass('product-price')]" position="before">
            <span t-if="this.props.line.design_id" class="me-2">
                <i class="fa fa-tint" aria-label="Design" title="Design"/>
            </span>
        </xpath>
    </t>
</templates>
