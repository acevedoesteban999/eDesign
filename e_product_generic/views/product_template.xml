<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="e_product_generic_inherit_product_template" model="ir.ui.view">
        <field name="name">product.template.view.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//label[@for='sale_ok']" position="after">
                <field name="generic_ok"/>
                <label for="generic_ok"/>
            </xpath>
             <xpath expr="//page[@name='variants']" position="after">
                <page name="e_product_generic" string="Generic Bill" invisible="not generic_ok">
                    <field name="generic_bill_material_data">
                        <list>
                            <field name="name"></field>
                            <field name="product_template_variant_value_ids" widget="many2many_tags"></field>
                        </list>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>