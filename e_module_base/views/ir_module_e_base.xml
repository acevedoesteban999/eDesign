<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_ir_module_e_base_list" model="ir.ui.view">
        <field name="name">ir.module.e_base.list</field>
        <field name="model">ir.module.e_base</field>
        <field name="arch" type="xml">
            <list>
                <field name="module_id"/>
                <field name="module_state"
                    widget="badge"
                    decoration-success="module_state == 'installed'"
                    decoration-muted="module_state == 'uninstalled'"
                    decoration-danger="module_state == 'uninstallable'"
                    decoration-warning="True"
                ></field>
            </list>
        </field>
    </record>

    <record id="view_ir_module_e_base_form" model="ir.ui.view">
        <field name="name">ir.module.e_base.form</field>
        <field name="model">ir.module.e_base</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Install Module" name="install_module" type="object" invisible="module_state != 'uninstalled'" class="oe_highlight"/>
                    <button string="Recompute Data" name="action_recompute_data" type="object" class="oe_highlight" invisible="module_state != 'installed'"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="module_id"/>
                            <field name="module_state"
                                widget="badge"
                                decoration-success="module_state == 'installed'"
                                decoration-muted="module_state == 'uninstalled'"
                                decoration-danger="module_state == 'uninstallable'"
                                decoration-warning="True"
                            />
                        </group>
                        <group>
                            <field name="module_icon" widget="image_url"/>
                        </group>
                    </group>
                    <notebook invisible="module_state != 'installed'">
                        <page name="info" string="Information">
                            <group>
                                <group name="versions">
                                    <field name="installed_version"/>
                                    <field name="local_version"/>
                                </group>
                                <group name="state">
                                    <field name="state" 
                                        widget="badge" 
                                        readonly="1" 
                                        decoration-danger="state == 'error'"
                                        />
                                    <field name="error_msg" 
                                        invisible="not error_msg"
                                        string="Info"
                                        readonly="1" 
                                        widget="badge"
                                        decoration-muted="True"
                                        />
                                    <field name="last_check" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
