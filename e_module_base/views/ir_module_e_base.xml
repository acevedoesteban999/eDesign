<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_ir_module_e_base_list" model="ir.ui.view">
        <field name="name">ir.module.e_base.list</field>
        <field name="model">ir.module.e_base</field>
        <field name="arch" type="xml">
            <list>
                <field name="module_name"/>
                <field name="module_status"
                    widget="badge"
                    decoration-success="module_status == 'ready'"
                    decoration-warning="module_status == 'no_installed'"
                    decoration-danger="module_status == 'dont_found'"
                ></field>
            </list>
        </field>
    </record>

    <record id="view_ir_module_e_base_form" model="ir.ui.view">
        <field name="name">ir.module.e_base.form</field>
        <field name="model">ir.module.e_base</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <!-- <button string="Addon Wizard" name="%(addon_modules_wizard_action)d" type="action" class="oe_highlight"/> -->
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="module_name" placeholder="ex: e_module"/>
                            <field name="module_status"
                                widget="badge"
                                decoration-success="module_status == 'ready'"
                                decoration-warning="module_status == 'no_installed'"
                                decoration-danger="module_status == 'dont_found'"
                            />
                        </group>
                        <group>
                            <field name="module_icon" widget="image_url"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="info" string="Information">
                            <group>
                                <group name="versions">
                                    <field name="installed_version" readonly="1"/>
                                </group>
                                <group name="state">
                                    <field name="error_msg" 
                                        invisible="not error_msg"
                                        string="Info"
                                        readonly="1" 
                                        widget="badge"
                                        decoration-secondary="True"
                                        />
                                    <field name="last_check" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
