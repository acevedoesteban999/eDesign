<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="e_pos_base.ePosOrderScreen">
        <div class="screen h-100 bg-100">
            <div class="screen-full-width d-flex w-100 h-100">
                <div t-if="!ui.isSmall || pos.ticket_screen_mobile_pane === 'left'" class="rightpane pane-border d-flex flex-column flex-grow-1 w-100 h-100 h-lg-100 bg-200 overflow-y-auto">
                    <div class="controls d-grid d-sm-flex align-items-center justify-content-between gap-2 gap-sm-3 p-2 bg-300">
                        <div class="buttons d-flex gap-2">
                            <button class="discard btn btn-lg btn-light text-nowrap" t-on-click="() => this.closePosOrderScreen()">
                                <i class="oi oi-chevron-left"/>
                                <span t-if="!ui.isSmall" class="ms-2">Back</span>
                            </button>
                        </div>
                        <SearchBar
                            config="getSearchBarConfig()"
                            placeholder.translate="Search Pikings..."
                            onSearch.bind="onSearch"
                            onFilterSelected.bind="onFilterSelected" />
                        <div class="item d-flex align-items-center justify-content-end">
                            <span class="page me-2"><t t-esc="getPageNumber()" /></span>
                            <div class="page-controls d-flex align-items-center gap-1">
                                <button class="previous btn btn-light btn-lg" t-on-click="() => this.onPrevPage()">
                                    <i class="fa fa-fw fa-caret-left" role="img" aria-label="Previous Delivery List" title="Previous Delivery List"></i>
                                </button>
                                <button class="next btn btn-light btn-lg" t-on-click="() => this.onNextPage()">
                                    <i class="fa fa-fw fa-caret-right" role="img" aria-label="Next Delivery List" title="Next Delivery List"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="orders overflow-y-auto flex-grow-1">
                        <t t-if="this.state.filteredPosOrderList.length !== 0">
                            <div class="header-row d-flex text-bg-700 fw-bolder" t-att-class="{ 'd-none': ui.isSmall }">
                                <div class="col p-2">Date</div>
                                <div class="col p-2">Order Number</div>
                                <div class="col p-2">Receipt Number</div>
                                <div class="col p-2">Customer</div>
                                <div class="col end p-2">State</div>
                            </div>
                            <t t-if="!ui.isSmall" t-foreach="this.state.filteredPosOrderList" t-as="pos_order" t-key="pos_order_index">
                                <div class="order-row" t-att-class="{ 'highlight bg-primary text-white': isHighlighted(pos_order) }"
                                    t-on-click="() => this.onClickPosOrder(pos_order)" >
                                    <div class="col p-2">
                                        <div><t t-esc="getDate(pos_order.create_date)"></t></div>
                                    </div>
                                    <div class="col p-2 ">
                                        <div><t t-esc="pos_order.pos_reference"></t></div>
                                    </div>
                                    <div class="col p-2 ">
                                        <div><t t-esc="pos_order.tracking_number"></t></div>
                                    </div>
                                    <div class="col p-2 ">
                                        <div><t t-if="pos_order.partner_id" t-esc="pos_order.partner_id[1]"></t></div>
                                    </div>
                                    <div class="col end p-2">
                                        <div t-if="pos_order.state" class="ebadge badge-pill" t-att-class="this.getStateDecoration(pos_order.state)">
                                            <t t-esc="getStateText(pos_order.state)"/>
                                        </div>
                                    </div>
                                </div>
                            </t>
                            <t t-if="ui.isSmall" t-foreach="this.state.filteredPosOrderList" t-as="pos_order" t-key="pos_order_index">
                                <div class="mobileOrderList order-row rounded-3" t-att-class="{ 'highlight bg-primary text-white': isHighlighted(pos_order) }"
                                    t-on-click="() => this.onClickPosOrder(pos_order,true)" >
                                    <div class="col p-2 d-flex justify-content-between align-items-center">
                                        <div><t t-esc="pos_order.name"></t></div>
                                        <div t-if="pos_order.partner_id"><t t-esc="pos_order.partner_id[1]"></t></div>
                                        <div><t t-esc="getDate(pos_order.create_date)"></t></div>
                                    </div>
                                    <div class="col p-2 d-flex justify-content-between align-items-center">
                                        <div t-if="pos_order.state" class="ebadge badge-pill" t-att-class="this.getStateDecoration(pos_order.state)">
                                            <t t-esc="getStateText(pos_order.state)"/>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </t>
                        <CenteredIcon
                            t-else=""
                            icon="this.pos.data.network.loading ? 'fa-spinner fa-spin' : 'fa-shopping-cart fa-4x'"
                            text="this.pos.data.network.loading ? 'Loading...' : 'No Pos Orders found'"
                            class="'h-100'"/>
                    </div>
                </div>
                <div t-if="this.state.selectedPosOrder and (!ui.isSmall || pos.ticket_screen_mobile_pane === 'right')" class="leftpane d-flex flex-column flex-grow-1 gap-2 w-100 h-100 h-lg-100 bg-200 p-2">
                    <t t-if="this.state.posOrderLines">
                        <div class="row">
                            <div class="col text-start">
                                <span class="text-muted h4" t-esc="this.state.selectedPosOrder.name"/>
                            </div>
                            <div class="col text-end">
                                <div  t-if="this.state.selectedPosOrder.state" class="ebadge badge-pill" t-att-class="this.getStateDecoration(this.state.selectedPosOrder.state)">
                                    <t t-esc="getStateText(this.state.selectedPosOrder.state)"/>
                                </div>
                            </div>
                        </div>
                        <div class="line-top-info py-2 px-3 rounded-3 bg-100">
                            <div class="row align-items-center justify-content-between flex-grow-1 w-100 w-md-auto">
                                <div class="col-auto">
                                    Receipt Number: 
                                 </div>
                                <div class="col-auto">
                                    <span t-esc="this.state.selectedPosOrder.tracking_number"/>
                                </div>
                            </div>
                            <div class="row align-items-center justify-content-between flex-grow-1 w-100 w-md-auto">
                                <div class="col-auto">
                                    Order Number:
                                </div>
                                <div class="col-auto">
                                    <span t-esc="this.state.selectedPosOrder.pos_reference"/>
                                </div>
                            </div>
                            <div t-if="this.state.selectedPosOrder.partner_id" class="row align-items-center justify-content-between flex-grow-1 w-100 w-md-auto">
                                <div class="col-auto">
                                    Customer:
                                </div>
                                <div class="col-auto">
                                    <span t-esc="this.state.selectedPosOrder.partner_id[1]"/>
                                </div>
                            </div>
                        </div>
                        
                        <div class="d-flex flex-column flex-grow-1 rounded-3 bg-white overflow-hidden">
                            <div class="order-container d-flex flex-column flex-grow-1 overflow-y-auto text-start">
                                <t t-foreach="getPosOrderLineProps()" t-as="lineProps" t-key="lineProps_index">
                                    <Orderline line="lineProps.line" />
                                </t>
                                <div 
                                    t-if="this.state.selectedPosOrder.pos_order_general_note"
                                    class="mt-1 bg-opacity-75 p-2 border-bottom border-top border-opacity-75"
                                    >
                                    <b class="fw-bolder">General Note</b>
                                    <t t-foreach="this.state.selectedPosOrder.pos_order_general_note.split('\n')" t-as="subNote" t-key="subNote_index">
                                        <br/>â€¢ <t t-esc="subNote"/>
                                    </t>
                                </div>
                            </div>
                        </div>
                        <div class="pads">
                            <div class="actionpad d-flex flex-column gap-2">
                                <t t-set="_assigned" t-value="this.state.selectedPosOrder.state == 'assigned'"/>
                                <div t-if="ui.isSmall" class="d-flex gap-2">
                                    <button class="back-button btn btn-light btn-lg lh-lg" t-on-click="()=>this.switchPane()" t-att-class="{'w-100':!_assigned}">
                                        <i class="oi oi-chevron-left fa-fw" role="img" aria-label="Go Back" title="Go Back" />
                                    </button>
                                </div>
                            </div>
                        </div>
                    </t>
                    <t t-else="">
                        <CenteredIcon icon="'fa-shopping-cart fa-4x'" text.translate="Select a Delivery" class="'bg-100 h-100'"/>
                        <BackButton t-if="ui.isSmall" onClick="() => closePosOrderScreen()"/>
                    </t>
                </div>
            </div>
        </div>
    </t>
</templates>