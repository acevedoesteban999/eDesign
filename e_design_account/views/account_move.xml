<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="e_design_view_account_move_form" model="ir.ui.view">
        <field name="name">account.move.view.account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='invoice_tab']//field[@name='product_id']" position="after">
                <field name="design_id" widget="product_label_section_and_note_field" column_invisible="not parent.has_design" readonly="state != 'draft'" context="{'action_target':'new'}"/>
            </xpath>
        </field>
    </record>

</odoo>