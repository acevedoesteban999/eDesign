<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="e_design_website_video_content_list" model="ir.ui.view">
        <field name="name">e_design_website.video.content.list</field>
        <field name="model">e_design_website.video.content</field>
        <field name="inherit_id" ref="e_video_content.view_video_content_list"></field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='filename']" position="before">
                <field name="name"/>
                <field name="ewebsite_published"/>
            </xpath>
        </field>
    </record>

    <record id="e_design_website__video_content_form" model="ir.ui.view">
        <field name="name">e_design_website.video.content.form</field>
        <field name="model">e_design_website.video.content</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="ewebsite_published"/>
                    </group>
                    <notebook>
                        <page name="video" string="Video">
                            <group>
                                <group>
                                    <field name="filename" readonly="1"/>
                                    <field name="preview" invisible="1"/>
                                    <field name="file_size" widget="file_size" readonly="1"/>
                                </group>
                                <group>
                                    <field name="video_data" 
                                        widget="video_content" 
                                        filename="filename"
                                        preview="preview"
                                        options="{'accepted_file_extensions': 'video/*'}"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_e_design_website_video_content" model="ir.actions.act_window">
        <field name="name">Videos</field>
        <field name="res_model">e_design_website.video.content</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>