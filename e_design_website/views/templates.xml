<?xml version='1.0' encoding='utf-8'?>
<odoo>
  <data>


    <template id="e_design_website.DesignsPage" >
      <t t-call="website.layout">
          <div class="container py-5 my-5">
            <div class="row g-4 public-design-style justify-content-center">
                
                <div class="col-12 col-md-3 mb-4">
                  <a href="/edesigns" class="text-decoration-none">
                    <div class="card h-100 border-0 shadow-sm hover-shadow-lg transition-300">
                      <div class="card-body text-center py-5 bg-light">
                        <i class="fa fa-paint-brush fa-5x text-success mb-4"></i>
                        <h3 class="card-title font-weight-bold text-dark">Designs</h3>
                      </div>
                    </div>
                  </a>
                </div>
                
                <div class="col-12 col-md-3 mb-4 ">
                  <a href="/edesigns/categories" class="text-decoration-none">
                    <div class="card h-100 border-0 shadow-sm hover-shadow-lg transition-300">
                      <div class="card-body text-center py-5 bg-light">
                        <i class="fa fa-folder-open fa-5x text-secondary mb-4"></i>
                        <h3 class="card-title font-weight-bold text-dark">Categories</h3>
                      </div>
                    </div>
                  </a>
                </div>

                <div class="col-12 col-md-3 mb-4 ">
                  <a href="/edesigns/products" class="text-decoration-none">
                    <div class="card h-100 border-0 shadow-sm hover-shadow-lg transition-300">
                      <div class="card-body text-center py-5 bg-light">
                        <i class="fa fa-cube fa-5x text-primary mb-4"></i>
                        <h3 class="card-title font-weight-bold text-dark">Products</h3>
                      </div>
                    </div>
                  </a>
                </div>
            </div>

            <div class="row">
            </div>

            <div class="row">
            </div>
        </div>
      </t>
    </template>
    
    <template id="e_design_website.DesignsProducts">
      <t t-call="website.layout">
          <div class="container py-5">
            <t t-call="e_design_website.breadcrumbComponent"/>
            <div id="listjs-search-component" class="row g-4 public-design-style">
                <div class="row my-2 justify-content-end">
                  <div class="col-12 col-sm-6 col-md-4 pe-0">
                    <t t-call="e_design_website.listJsSearchComponent">
                      <t t-set="list_js_id" t-value="'listjs-search-component'"/>
                      <t t-set="list_js_valueNames" t-value="['listjs-name', 'listjs-default-code']" />
                    </t>
                  </div>
                </div>
                <div class="list">
                  <t t-foreach="products" t-as="product">
                      <a style="text-decoration: none;" t-attf-href="/edesigns/products/{{product.id}}">
                        <div class="col-12 my-4">
                            <div class="card h-100">
                                <img t-if="product.image_1920"
                                    t-attf-src="/web/image/product.template/#{product.id}/image_1920"
                                    class="card-img-top"
                                    t-att-alt="product.name"/>
                                <div t-else="" class="card-img-top d-flex align-items-center justify-content-center bg-light">
                                    <i class="fa fa-image text-muted" style="font-size: 3rem;"></i>
                                </div>
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title fw-bold text-truncate">
                                        
                                        <span class="listjs-default-code" t-if="product.default_code">
                                          [<t t-esc="product.default_code"/>]
                                        </span>
                                        
                                        <span class="listjs-name" t-esc="product.name"/>
                                    </h5>
                                    <div class="card-text flex-grow-1 text-muted">
                                      <t t-esc="product.design_counter"/> Designs
                                    </div>
                                </div>
                            </div>
                        </div>
                      </a>
                  </t>
                </div>
            </div>
        </div>
        
      </t>
    </template>

    <template id="e_design_website.DesignsCategories">
      <t t-call="website.layout">
        <div class="container py-5">
          <t t-call="e_design_website.breadcrumbComponent"/>
          <div id="listjs-search-component" class="public-design-style">
            <div class="row my-2 justify-content-end">
              <div class="col-12 col-sm-6">
                <t t-call="e_design_website.listJsSearchComponent">
                  <t t-set="list_js_id" t-value="'listjs-search-component'"/>
                  <t t-set="list_js_valueNames" t-value="['listjs-name']" />
                </t>
              </div>
            </div>
            <div class="list row g-4">
              <t t-foreach="categories" t-as="category">
                <div class="col-12 my-4 listjs-item">
                  <div class="category-card div-href" t-att-data-widget-href="'/edesigns/categories/' + str(category.id)">
                    <div class="category-image-wrapper">
                      <img t-if="category.image" t-attf-src="/web/image/product.edesign.category/#{category.id}/image" class="card-img-top" t-att-alt="category.name"/>
                      <div t-else="" class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                        <i class="fa fa-image text-muted fa-3x"></i>
                      </div>
                      <div class="category-overlay">
                        <h4 class="category-title listjs-name" t-esc="category.name"/>
                        <span class="design-count"><t t-esc="category.design_counter"/> Designs</span>
                      </div>
                    </div>
                    <t t-if="category.subcategories_ids">
                      <t t-set="visible_subs" t-value="[s for s in category.subcategories_ids if s.is_published and s.has_subcategories_designs]"/>
                      <t t-if="visible_subs">
                        <div class="subcategories-accordion">
                          <t t-set="visible_limit" t-value="5"/>
                          <t t-set="parent_id" t-value="str(category.id)"/>
                          <t t-call="e_design_website.render_subcategories">
                            <t t-set="subcategories" t-value="list(enumerate(visible_subs))"/>
                            <t t-set="level" t-value="1"/>
                            <t t-set="is_more_section" t-value="False"/>
                          </t>
                        </div>
                      </t>
                    </t>
                  </div>
                </div>
              </t>
            </div>
          </div>
        </div>
      </t>
    </template>

    <template id="e_design_website.render_subcategories">
      <t t-set="filtered_subs" t-value="[s for s in subcategories if s[1].is_published and s[1].has_subcategories_designs]"/>
      <t t-set="total" t-value="len(filtered_subs)"/>
      <t t-foreach="filtered_subs" t-as="sub_tuple">
        <t t-set="idx" t-value="sub_tuple[0]"/>
        <t t-set="sub" t-value="sub_tuple[1]"/>
        <t t-if="not is_more_section or (is_more_section and idx >= visible_limit)">
          <t t-if="not is_more_section and idx >= visible_limit">
            <t t-set="break_loop" t-value="True"/>
          </t>
          <t t-else="">
            <div t-att-class="'accordion-item' + (' more-item' if is_more_section else '')">
              <div t-att-class="'accordion-header div-href div-href-transition level-' + str(level)" t-att-data-widget-href="'/edesigns/categories/' + str(sub.id)" t-att-data-widget-stop-propagation="1">
                <span class="accordion-name" t-esc="sub.name"/>
                <t t-if="sub.subcategories_ids">
                  <t t-set="has_visible_children" t-value="any(s.is_published and s.has_subcategories_designs for s in sub.subcategories_ids)"/>
                  <t t-if="has_visible_children">
                    <button class="btn btn-sm btn-outline-primary accordion-btn" type="button" data-bs-toggle="collapse" t-att-data-bs-target="'#collapse-' + parent_id + '-' + str(sub.id)">
                      + subcategories
                    </button>
                  </t>
                </t>
              </div>
              <t t-if="sub.subcategories_ids">
                <t t-set="has_visible_children" t-value="any(s.is_published and s.has_subcategories_designs for s in sub.subcategories_ids)"/>
                <t t-if="has_visible_children">
                  <div t-att-id="'collapse-' + parent_id + '-' + str(sub.id)" class="accordion-collapse collapse">
                    <div t-att-class="'accordion-body' + (' nested' if level > 1 else '')">
                      <div class="see-all div-href div-href-transition" t-att-data-widget-href="'/edesigns/categories/' + str(sub.id)" t-att-data-widget-stop-propagation="1">
                        <span>See all <t t-esc="sub.name"/></span>
                        <i class="fa fa-arrow-right"></i>
                      </div>
                      <t t-call="e_design_website.render_subcategories">
                        <t t-set="subcategories" t-value="list(enumerate(sub.subcategories_ids))"/>
                        <t t-set="level" t-value="level + 1"/>
                        <t t-set="is_more_section" t-value="False"/>
                      </t>
                    </div>
                  </div>
                </t>
              </t>
            </div>
          </t>
        </t>
      </t>
      <t t-if="not is_more_section and total > visible_limit">
        <div class="accordion-item">
          <div class="accordion-header show-more" data-bs-toggle="collapse" t-att-data-bs-target="'#collapse-more-' + parent_id">
            <span class="text-muted">+<t t-esc="total - visible_limit"/> more</span>
            <i class="fa fa-chevron-down"></i>
          </div>
          <div t-att-id="'collapse-more-' + parent_id" class="accordion-collapse collapse">
            <div class="accordion-body more-section">
              <t t-call="e_design_website.render_subcategories">
                <t t-set="subcategories" t-value="subcategories"/>
                <t t-set="level" t-value="1"/>
                <t t-set="is_more_section" t-value="True"/>
              </t>
            </div>
          </div>
        </div>
      </t>
    </template>
    
    <template id="e_design_website.EProductDesignTemplate">
      <t t-call="website.layout">
          <div class="container py-3">
            <t t-call="e_design_website.breadcrumbComponent"/>
            <t t-call="e_design_website.loaderComponent"/>
              <owl-component 
                name="e_design_website.EProductDesign"
                t-att-props='controller_context'
            />
          </div>
      </t>
    </template>
    
    <template id="e_design_website.DesignsDesign">
      <t t-call="e_design_website.designLayout">
        <div class="container py-4">
            <t t-call="e_design_website.breadcrumbComponent"/>
            <div class="row g-4 designs-design ">
              <div class="col-12 col-md-8">
                <div class="row design-gallery">
                  <a href="#" data-fancybox="gallery" t-attf-data-src="/web/image/product.edesign/#{design.id}/image" 
                    class="d-block mb-3">
                    <img t-attf-src="/web/image/product.edesign/#{design.id}/image" t-att-alt="design.name" 
                        class="img-fluid rounded-3 shadow-lg w-100" 
                        style="max-height: 400px; object-fit: contain;"/>
                  </a>
                </div>
                
              </div>
              
              <div class="col-12 col-md-4">
                  <div class="row">
                    <div class="design-header text-center mb-4">
                        <div class="badge bg-dark text-uppercase fs-6 px-3 py-2 h2" 
                              t-out="design.name"/>
                        <div class="display-5 fw-bold mt-3 mb-0 h5" 
                            t-if="design.default_code" t-out="design.default_code"/>
                      </div>
                  </div>
                  
              </div>
                
            </div>
            <div class="row justify-content-center thumbnails-grid" >
              <t t-if="design.attachment_ids">
                <t t-foreach="design.attachment_ids" t-as="img">
                  <a href="#" data-fancybox="gallery" t-attf-data-src="/web/content/#{img.id}"
                    class="col-4 col-sm-3 col-md d-inline-block p-2">
                    <img t-attf-src="/web/content/#{img.id}" 
                        class="rounded-2 border w-100" 
                        style="aspect-ratio: 1; object-fit: cover;"/>
                  </a>
                </t>
              </t>
              <!-- <div t-else="" class="card-img-top row align-items-center justify-content-center">
                <div class="col-auto bg-light text-center p-4">
                  <i class="fa fa-picture-o text-muted pb-2" style="font-size: 3rem;"></i>
                  <br/>
                  <span class="text-muted py-1">
                    No Images Found
                  </span>
                </div>
              </div> -->
              
            </div>
            
        </div>
        
        <script>
          document.addEventListener('DOMContentLoaded', function() {
            Fancybox.bind('[data-fancybox="gallery"]', {
              Toolbar: {
                display: [
                  { id: "counter", position: "center" },
                  "zoom",
                  "fullscreen",
                  "close",
                ],
              },
            });
          });
        </script>
      </t>
    </template>
    
  </data>
</odoo>