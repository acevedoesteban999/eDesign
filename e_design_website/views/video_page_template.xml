<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="video_page_template" name="Video Page">
        <t t-call="website.layout">
            <div class="container mt-5">
                <h1 t-esc="video.name"/>
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <video controls="controls" width="100%">
                            <source t-attf-src="/web/content/video.content/{{video.id}}/video_file" type="video/mp4"/>
                        </video>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>