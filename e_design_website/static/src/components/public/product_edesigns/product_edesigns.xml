<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">
    <t t-name="e_design_website.filterSidebar"> 
        <button class="btn btn-primary filter-toggle-btn" 
                data-bs-toggle="offcanvas" 
                data-bs-target=".filterSidebar">
            FILTER
        </button>

        <div class="offcanvas offcanvas-end filterSidebar"  tabindex="-1">
            <div class="offcanvas-header">
                <h5 class="offcanvas-title">Filter</h5>
                <button t-ref="buttonCloseFilter" type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
            </div>
            <div class="offcanvas-body">
                <div class="mb-3">
                    <label class="form-label">Porduct</label>
                    <SearchComponent 
                        model="'product.template'"
                        fields="['id', 'display_name' , 'design_ids']"
                        onSelect="(record) => this.temp_product = record"
                        placeholder="'Search'"
                        searchQuery="state.product?state.product.display_name:''"
                        limit="5"/>
                </div>
                <div class="mb-3">
                    <label class="form-label">Category</label>
                    <SearchComponent 
                        model="'product.edesign.category'"
                        fields="['id', 'display_name','subcategories_ids']"
                        onSelect="(record) => this.temp_category = record"
                        placeholder="'Search'"
                        searchQuery="state.category?state.category.display_name:''"
                        limit="5"/>
                </div>
                <div class="row justify-content-center">
                    <button t-on-click="applyFilter" class="col-auto btn btn-primary m-auto">
                        Apply
                    </button>
                </div>
            </div>
        </div>
    </t>

    <t t-name="e_design_website.EProductDesign">
        <div>
            <div class="designs-design-component">
                <t t-call="e_design_website.filterSidebar"/>
            
                <div class="container mt-4" id="listjs-search-component">
                    <div class="row justify-content-between">
                        <div class="col-12 col-sm-6 order-2 order-sm-1">
                            <div class="h5">
                                <div t-if="this.state.product" class="text-muted badge badge-pill bg-secondary position-relative pe-4">
                                    Product: <t t-esc="this.state.product.display_name ?? this.state.product.name"/>
                                    <span class="remove-icon" t-on-click="() => this.cancelProduct()">×</span>
                                </div>
                                <br/>
                                <div t-if="this.state.category" class="text-muted badge badge-pill bg-primary position-relative pe-4">
                                    Category: <t t-esc="this.state.category.display_name ?? this.state.category.name"/>
                                    <span class="remove-icon" t-on-click="() => this.cancelCategory()">×</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-sm-6 col-md-4 order-1 order-sm-2">
                            <div class="search-component">
                                <div class="dropdown-search">
                                    <div class="row px-2">
                                        <div class="col px-0">
                                            <input type="text" 
                                                class="form-control fuzzy-search" 
                                                placeholder="Search"
                                                />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="list row g-4 public-design-style mt-3">
                        <t t-if="!this.state.loadingData">
                            <t t-if="this.state.designs?.length">
                                <div t-if="this.state.subcategories?.length and this.state.subcategories.length > 1" class="row g-2 subcategory-filters">
                                    <div class="col-auto" 
                                        t-foreach="this.state.subcategories" 
                                        t-as="subcategory" 
                                        t-key="subcategory.id"
                                    >
                                        <button 
                                            t-attf-class="btn {{this.state.subcategory?.id == subcategory.id ? 'btn-primary' : 'btn-outline-primary'}}"
                                            t-on-click="() => this.selectSubCategory(subcategory)"
                                        >
                                            <small t-esc="subcategory.name"/>
                                            <span 
                                                t-if="this.state.subcategory?.id == subcategory.id" 
                                                class="remove-icon"
                                                t-on-click="(event) => { event.stopPropagation(); this.cancelSubCategory(); }"
                                            >×</span>
                                        </button>
                                    </div>
                                </div>
                                <t t-foreach="this.state.designs" t-as="design" t-key="design.id">
                                    <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12">
                                        <div class="card h-100">
                                            <a style="text-decoration: none;" t-attf-href="{{this.props.base_url}}/{{design.id}}">
                                                <img t-attf-src="/web/image/product.edesign/#{design.id}/image"
                                                    class="card-img-top"
                                                    t-att-alt="design.name"/>
                                                <div class="card-body d-flex flex-column">
                                                    <h5 t-if="design.default_code" class="card-title fw-bold text-truncate listjs-defaultcode">
                                                        <t t-esc="design.default_code"/>
                                                    </h5>
                                                    <p class="card-text flex-grow-1 text-muted listjs-name">
                                                        <t t-esc="design.name" t-options='{"widget": "text"}'/>
                                                    </p>
                                                </div>
                                            </a>
                                        </div>
                                    </div>
                                </t>
                            </t>
                            <t t-else="">
                                <div class="py-3 text-muted">
                                    No Designs to Show
                                </div>
                            </t>
                        </t>
                        <div t-else="" class="position-relative">
                            <div class="row align-items-center loader-component text-center">
                                <div class="col">
                                    <div class="spinner-border text-primary" role="status">
                                        <span class="sr-only"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>